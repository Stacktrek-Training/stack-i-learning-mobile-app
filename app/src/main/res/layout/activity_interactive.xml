<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteractiveActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's Play!"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/spiegel_cd_bold"/>

            <ImageView
                android:id="@+id/iv_fullstack"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/header_fullstack"
                android:scaleType="centerCrop"
                android:contentDescription="Full Stack"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your coding sandbox awaits.."
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="@font/spiegel_cd_bold"
                android:layout_marginTop="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coding Playground"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/spiegel_cd_bold"/>

                    <TextView
                        android:id="@+id/description_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experiment with different programming languages and write and run code in real-time."
                        android:textColor="#666666"
                        android:textSize="18sp"
                        android:fontFamily="@font/spiegel_cd_regular"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/item_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Code in Java, Javascript, C, C++, C# and Python"
                        android:textColor="#666666"
                        android:textSize="18sp"
                        android:fontFamily="@font/spiegel_cd_regular"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/btn_go"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_orange"
                        android:text="Go"
                        android:fontFamily="@font/spiegel_semi_bold"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Categories"
                    android:fontFamily="@font/spiegel_cd_bold"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <!-- First row of CardViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- First CardView in first row -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_html"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        android:elevation="8dp"
                        android:background="@drawable/learn_html"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_html"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:padding="16dp"
                                android:text="Multiple Choices"
                                android:fontFamily="@font/spiegel_cd_bold"
                                android:textSize="24sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Second CardView in first row -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_css"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="16dp"
                        android:elevation="8dp"
                        android:background="@drawable/cardview_rounded"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_css"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:padding="16dp"
                                android:text="Drag and Drop"
                                android:fontFamily="@font/spiegel_cd_bold"
                                android:textSize="24sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second row of CardViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- First CardView in second row -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        android:elevation="8dp"
                        android:background="@drawable/learn_html"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_c"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:padding="16dp"
                                android:text="C"
                                android:fontFamily="@font/spiegel_cd_bold"
                                android:textSize="24sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Second CardView in second row -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_python"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="16dp"
                        android:elevation="8dp"
                        android:background="@drawable/cardview_rounded"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_python"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:padding="16dp"
                                android:text="Python"
                                android:fontFamily="@font/spiegel_cd_bold"
                                android:textSize="24sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!-- Add your content here -->

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
