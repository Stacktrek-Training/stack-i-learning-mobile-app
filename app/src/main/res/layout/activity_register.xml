<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">

    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Join Stacktrek Now"
        android:fontFamily="@font/spiegel_cd_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/facebook_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_facebook"
        android:drawableLeft="@drawable/logo_facebook"
        android:drawablePadding="10dp"
        android:text="@string/register_with_facebook"
        android:fontFamily="@font/spiegel_semi_bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/google_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/facebook_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_goole"
        android:drawableLeft="@drawable/logo_google"
        android:drawablePadding="10dp"
        android:text="@string/register_with_google"
        android:fontFamily="@font/spiegel_semi_bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/google_button"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="#DDDDDD" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_background"
        android:hint="@string/fullname"
        android:fontFamily="@font/spiegel_cd_regular"
        app:startIconDrawable="@drawable/baseline_account_circle_24"
        app:endIconMode="clear_text"
        app:boxBackgroundColor="@color/textInputLayoutBackground"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spiegel_cd_regular"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/fullname"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_background"
        android:hint="@string/address"
        android:fontFamily="@font/spiegel_cd_regular"
        app:startIconDrawable="@drawable/baseline_location_on_24"
        app:endIconMode="clear_text"
        app:boxBackgroundColor="@color/textInputLayoutBackground"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spiegel_cd_regular"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/address"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_background"
        android:hint="@string/email"
        android:fontFamily="@font/spiegel_cd_regular"
        app:startIconDrawable="@drawable/baseline_alternate_email_24"
        app:endIconMode="clear_text"
        app:boxBackgroundColor="@color/textInputLayoutBackground"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spiegel_cd_regular"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_background"
        android:hint="@string/password"
        android:fontFamily="@font/spiegel_cd_regular"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:endIconMode="clear_text"
        app:boxBackgroundColor="@color/textInputLayoutBackground"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spiegel_cd_regular"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_orange"
        android:text="@string/register"
        android:fontFamily="@font/spiegel_semi_bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

</RelativeLayout>